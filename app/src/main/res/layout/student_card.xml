<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:outlineSpotShadowColor="@color/transparent"
        android:outlineAmbientShadowColor="@color/transparent"

        app:cardBackgroundColor="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/student_card1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:outlineSpotShadowColor="@color/transparent"


                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/student_card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:outlineSpotShadowColor="@color/transparent"


                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="1000dp">

                    <ImageView
                        android:id="@+id/student_dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:contentDescription="@string/checker"
                        app:srcCompat="@drawable/ic_default_dp" />


                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/attendance_checker"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:layout_gravity="bottom|end"
                    android:elevation="8dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_tick"
                    android:contentDescription="@string/attendance_checker" />


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="@string/name" />


            <TextView
                android:id="@+id/student_village"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="@string/village" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
