<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="30dp"
        android:elevation="20dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                >
            <TextView
                android:id="@+id/QuesIn_ques_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checker"
                style="bold"
                android:layout_margin="8dp"
                android:textColor="#000000"
                android:textSize="24sp"
                android:minLines="1"
                android:maxLines="6"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#ffffff"
                >
            <TextView
                android:id="@+id/Opt1In_ques_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_overlay"
                android:text="@string/checker"
                android:layout_margin="8dp"
                android:textSize="20sp"
                android:minLines="1"
                android:maxLines="2"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#ffffff"
                >
            <TextView
                android:id="@+id/Opt2In_ques_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/black_overlay"
                android:text="@string/checker"
                android:layout_margin="8dp"
                android:textSize="20sp"
                android:minLines="1"
                android:maxLines="2"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#ffffff"
                >
            <TextView
                android:id="@+id/Opt3In_ques_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/black_overlay"
                android:text="@string/checker"
                android:layout_margin="8dp"
                android:textSize="20sp"
                android:minLines="1"
                android:maxLines="2"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#ffffff"
                >
            <TextView
                android:id="@+id/Opt4In_ques_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/black_overlay"
                android:text="@string/checker"
                android:layout_margin="8dp"
                android:textSize="20sp"
                android:minLines="1"
                android:maxLines="2"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#ffffff"
                >
            <TextView
                android:id="@+id/AnsIn_ques_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black_overlay"
                android:text="@string/checker"
                android:layout_margin="8dp"
                android:textSize="20sp"
                android:drawableEnd="@drawable/ic_tick"
                android:minLines="1"
                android:maxLines="2"
                android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>