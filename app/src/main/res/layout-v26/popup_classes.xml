<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_id_classes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">




            <EditText
                android:id="@+id/class_name_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:textColorHint="@color/black_overlay"
                android:textColor="#000000"
                android:background="@drawable/border"
                android:autofillHints="none"
                android:hint="@string/hint"


                android:inputType="textAutoCorrect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <Button
                    android:id="@+id/saveClass_pop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ShapeAppearance.MaterialComponents.LargeComponent"
                    android:text="@string/saveClass"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#FFFFC585"
                    android:layout_margin="8dp"

                    android:textStyle="bold" />
                <Button
                    android:background="@drawable/rectangle"
                    android:id="@+id/cancelClasspop"
                    style="@style/ShapeAppearance.MaterialComponents.LargeComponent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/cancel"
                    android:layout_weight="1"
                    android:backgroundTint="#FFF17E01"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>