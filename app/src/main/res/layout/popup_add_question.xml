<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_id_addQues"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <EditText

                android:id="@+id/QuesIn_ques_card_popup"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:background="@drawable/rectangle"
                android:elevation="4dp"
                android:hint="Enter Question Here"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="6"
                android:minLines="1"
                android:textColor="#000000"
                android:textColorHint="@color/black_overlay"
                android:textSize="25sp"
                android:autofillHints="Enter Question Here" />





            <EditText
                android:layout_margin="4dp"
                android:id="@+id/Opt1In_ques_card_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:autofillHints="Enter Option Here"
                android:hint="Enter First Option Here"
                android:inputType="textAutoCorrect"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="20sp"
                 />

            <EditText
                android:id="@+id/Opt2In_ques_card_popup"
                android:layout_width="wrap_content"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"

                android:autofillHints="Enter Option Here"
                android:hint="Enter Second Option Here"
                android:inputType="textAutoCorrect"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="20sp"
                 />

            <EditText
                android:id="@+id/Opt3In_ques_card_popup"
                android:layout_width="wrap_content"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"

                android:autofillHints="EnterOption Here"
                android:hint="Enter Third Option Here"
                android:inputType="textAutoCorrect"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="20sp"
                 />

            <EditText
                android:id="@+id/Opt4In_ques_card_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"

                android:autofillHints="Enter Option Here"
                android:hint="Enter Fouth Option Here"
                android:inputType="textAutoCorrect"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="20sp"
                 />

            <EditText
                android:id="@+id/AnsIn_ques_card_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"

                android:backgroundTint="#CBF9C6"
                android:autofillHints="Enter Option Here"
                android:hint="Enter Correct Option Here"
                android:inputType="textAutoCorrect"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="20sp"
                 />
            <Button
                android:id="@+id/saveques_popup"
                android:layout_width="match_parent"
                android:background="@drawable/rectangle"
                android:backgroundTint="#0FEF0F"
                android:layout_height="wrap_content"


                android:text="@string/addQues"
                android:textSize="14sp"
                android:textStyle="bold" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>